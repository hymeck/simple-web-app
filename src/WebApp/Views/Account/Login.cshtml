@model UserLoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-3">
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Username"></label><br/>
                <input asp-for="Username" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Username"></span><br/>
            </div>

            <div>
                <label asp-for="Password"></label><br/>
                <input asp-for="Password" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Password"></span><br/>
            </div>

            <div>
                <label asp-for="RememberMe" class="checkbox mb-3"></label>
                <input asp-for="RememberMe"/>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
        
        <div>
            <a asp-controller="Account" asp-action="Register">Don't have any account? Register</a>
        </div>
    </div>
</div>
