@model UserListViewModel
@{
    ViewBag.Title = "Home";
}

<h2>@ViewBag.Title</h2>
<form method="post" asp-controller="Account" asp-action="Logout">
    <div>
        <button type="submit" class="btn btn-danger">Logout</button>
    </div>
</form>

<div>
    <div>
        
        <div style="margin-top: 10px">
            <button>block</button>
            <button><img src="feather-icons/dist/icons/unlock.svg" alt="unlock"></button>
            <button><img src="feather-icons/dist/icons/trash-2.svg" alt="delete"></button>
        </div>
        
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th score="col">
                    <input type="checkbox"/> 
                    (un)block all
                </th>
                <th score="col">id</th>
                <th score="col">username</th>
                <th score="col">email</th>
                <th score="col">registration date</th>
                <th score="col">last login date</th>
                <th score="col">status</th>
            </tr>
            </thead>
            <br/>

            <tbody>
            @foreach (var u in Model.Users)
            {
                <tr>
                    <td style="text-align: center"> <input type="checkbox" /> </td>
                    <td>@u.Id</td>
                    <td>@u.UserName</td>
                    <td>@u.Email</td>
                    <td>@u.RegisteredAt</td>
                    <td>@u.GetLastLoginAtString()</td>
                    <td>@u.GetStatus()</td>
                </tr>
            }
            </tbody>

        </table>
    </div>
</div>
